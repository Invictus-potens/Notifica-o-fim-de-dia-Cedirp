{
  "name": "automacao-mensagem-espera",
  "version": "1.0.0",
  "description": "Sistema de automação para envio de mensagens de espera integrado com CAM Krolik",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:production": "node scripts/test-production-flow.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "setup:production": "node scripts/setup-production.js",
    "health-check": "./scripts/health-check.sh",
    "logs": "tail -f logs/app.log",
    "backup": "node scripts/backup.js",
    "start:production": "pm2 start ecosystem.config.js --env production",
    "stop:production": "pm2 stop ecosystem.config.js",
    "restart:production": "pm2 restart ecosystem.config.js",
    "logs:production": "pm2 logs",
    "monitor:production": "pm2 monit",
    "health:check": "curl -f http://localhost:8080/health",
    "metrics:check": "curl -f http://localhost:9090/metrics",
    "validate:supabase": "node scripts/validate-supabase.js"
  },
  "keywords": [
    "automation",
    "messaging",
    "cam-krolik",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@types/luxon": "^3.7.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "luxon": "^3.7.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
