{
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "timeout": 30000,
    "keepAliveTimeout": 5000
  },
  "api": {
    "krolik": {
      "timeout": 10000,
      "maxRetries": 3,
      "retryDelay": 1000,
      "rateLimit": {
        "requests": 100,
        "window": 60000
      }
    },
    "supabase": {
      "timeout": 5000,
      "maxConnections": 10,
      "connectionTimeout": 10000
    }
  },
  "monitoring": {
    "checkInterval": 60000,
    "waitTimeThreshold": 1800000,
    "maxConcurrentAttendances": 1000,
    "batchSize": 50,
    "processingDelay": 100
  },
  "logging": {
    "level": "info",
    "maxSize": "10MB",
    "maxFiles": 5,
    "datePattern": "YYYY-MM-DD",
    "zippedArchive": true,
    "apiRequests": false,
    "databaseQueries": false,
    "performanceMetrics": true
  },
  "security": {
    "cors": {
      "origin": "*",
      "credentials": false,
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "maxRequests": 100,
      "message": "Muitas requisições, tente novamente em alguns minutos"
    },
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": false,
      "crossOriginEmbedderPolicy": false
    }
  },
  "cache": {
    "ttl": 300,
    "maxItems": 1000,
    "sectors": {
      "ttl": 3600
    },
    "actionCards": {
      "ttl": 3600
    }
  },
  "backup": {
    "enabled": true,
    "interval": 86400000,
    "retention": 604800000,
    "path": "data/backup",
    "compression": true
  },
  "health": {
    "enabled": true,
    "interval": 300000,
    "timeout": 5000,
    "endpoints": [
      "/health",
      "/api/status"
    ]
  },
  "metrics": {
    "enabled": true,
    "retention": 604800000,
    "collectInterval": 60000,
    "endpoints": [
      "/metrics",
      "/api/metrics"
    ]
  },
  "features": {
    "debugMode": false,
    "mockApiResponses": false,
    "skipExternalCalls": false,
    "maintenanceMode": false
  }
}