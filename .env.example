# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# Automação de Mensagem de Espera - CAM Krolik Integration
# ========================================

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ========================================
# CONFIGURAÇÕES DA API CAM KROLIK
# ========================================
# OBRIGATÓRIO: Configure com sua instância do CAM Krolik
KROLIK_API_BASE_URL=xxxxx
KROLIK_API_TOKEN=xxxxx

# Configurações de timeout e retry para produção
KROLIK_API_TIMEOUT=15000
KROLIK_API_MAX_RETRIES=5
KROLIK_API_RETRY_DELAY=2000

# ========================================
# CONFIGURAÇÕES DO SUPABASE
# ========================================
# OBRIGATÓRIO: Configure com seu projeto Supabase
SUPABASE_URL=xxxxx
SUPABASE_ANON_KEY=xxxxx

# Configurações de conexão para produção
SUPABASE_TIMEOUT=10000
SUPABASE_MAX_CONNECTIONS=20

# ========================================
# CONFIGURAÇÕES DE HORÁRIO
# ========================================
TIMEZONE=America/Sao_Paulo
END_OF_DAY_TIME=18:00

# Configurações de dias úteis (0=Domingo, 1=Segunda, ..., 6=Sábado)
BUSINESS_DAYS=1,2,3,4,5

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
CHECK_INTERVAL_MINUTES=1
WAIT_TIME_THRESHOLD_MINUTES=30
MAX_CONCURRENT_ATTENDANCES=1000

# Configurações de performance para produção
BATCH_SIZE=100
PROCESSING_DELAY=50

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=10

# Logs específicos para produção
LOG_API_REQUESTS=false
LOG_DATABASE_QUERIES=false
LOG_PERFORMANCE_METRICS=true

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# CORS - Configure com seu domínio
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=false

# Rate Limiting para produção
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Segurança de headers
HELMET_ENABLED=true

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
CACHE_TTL_SECONDS=600
CACHE_MAX_ITEMS=5000

# Cache específico para produção
CACHE_SECTORS_TTL=7200
CACHE_ACTION_CARDS_TTL=7200

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=12
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=data/backup

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO DE SAÚDE
# ========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000

# Métricas para produção
METRICS_ENABLED=true
METRICS_RETENTION_HOURS=720

# ========================================
# CONFIGURAÇÕES DE REDIS (OPCIONAL)
# ========================================
# Descomente se usar Redis para cache
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES (OPCIONAL)
# ========================================
# Slack para alertas críticos
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email para notificações
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# ADMIN_EMAIL=admin@your-domain.com

# ========================================
# CONFIGURAÇÕES DE SSL/TLS
# ========================================
# Configurações para HTTPS (se aplicável)
# SSL_CERT_PATH=ssl/cert.pem
# SSL_KEY_PATH=ssl/key.pem
# FORCE_HTTPS=true

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS LOCAL (FALLBACK)
# ========================================
# Configurações para fallback local
LOCAL_DB_PATH=data/local.db
LOCAL_DB_BACKUP_INTERVAL=3600000

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# IMPORTANTE: Manter sempre false em produção
DEBUG_MODE=false
MOCK_API_RESPONSES=false
SKIP_EXTERNAL_CALLS=false