# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# ========================================
# CONFIGURAÇÕES DA API CAM KROLIK
# ========================================
KROLIK_API_BASE_URL=https://your-krolik-instance.com/core/v2/api
KROLIK_API_TOKEN=your-api-token-here

# Configurações de timeout e retry
KROLIK_API_TIMEOUT=10000
KROLIK_API_MAX_RETRIES=3
KROLIK_API_RETRY_DELAY=1000

# ========================================
# CONFIGURAÇÕES DO SUPABASE
# ========================================
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# Configurações de conexão
SUPABASE_TIMEOUT=5000
SUPABASE_MAX_CONNECTIONS=10

# ========================================
# CONFIGURAÇÕES DE HORÁRIO
# ========================================
TIMEZONE=America/Sao_Paulo
END_OF_DAY_TIME=18:00

# Configurações de dias úteis (0=Domingo, 1=Segunda, ..., 6=Sábado)
BUSINESS_DAYS=1,2,3,4,5

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
CHECK_INTERVAL_MINUTES=1
WAIT_TIME_THRESHOLD_MINUTES=30
MAX_CONCURRENT_ATTENDANCES=1000

# Configurações de performance
BATCH_SIZE=50
PROCESSING_DELAY=100

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Logs específicos
LOG_API_REQUESTS=false
LOG_DATABASE_QUERIES=false
LOG_PERFORMANCE_METRICS=true

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Segurança de headers
HELMET_ENABLED=true

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
CACHE_TTL_SECONDS=300
CACHE_MAX_ITEMS=1000

# Cache específico
CACHE_SECTORS_TTL=3600
CACHE_ACTION_CARDS_TTL=3600

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=data/backup

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO DE SAÚDE
# ========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=5000

# Métricas
METRICS_ENABLED=true
METRICS_RETENTION_HOURS=168

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Apenas para desenvolvimento - remover em produção
DEBUG_MODE=false
MOCK_API_RESPONSES=false
SKIP_EXTERNAL_CALLS=false